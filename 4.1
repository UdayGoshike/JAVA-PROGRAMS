class mythread implements Runnable {
    @Override
    public void run() {
        try {
            while(true){
                System.out.println("running 1...");
                Thread.sleep(2000);
            }

        } catch (InterruptedException e) {
            throw new RuntimeException(e);
        }

    }
}
