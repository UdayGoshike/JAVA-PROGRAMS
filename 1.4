public class Main {
    static int age = 0;  // static variable

    // static block
    static {
        System.out.println("static block executed");
    }

    // constructor
    static void update(){
       System.out.println("updated...."); 
        age++;
    }

    // static method
    static void display() {
        System.out.println("count:"+age);
    }

    public static void main(String[] args) {
        Main.display();              // prints age
        Main.update(); // constructor increments age
        Main.display();              // prints age
        Main.update();  
         Main.display(); // prints updated age
    }
}
